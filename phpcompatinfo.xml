<?xml version="1.0" encoding="utf-8"?>
<!-- Caveat: apparently, closures are not detected -->
<phpcompatinfo reference="ALL"
               report="summary"
               reportFileAppend="false"
               cacheDriver="file"
               recursive="true"
               fileExtensions="php, htm"
               consoleProgress="false"
               verbose="false">

    <excludes>
        <exclude id="monorder">
            <directory name="config"/>
            <directory name="css"/>
            <directory name="data"/>
            <directory name="help"/>
            <directory name="languages"/>
            <directory name="test"/>
        </exclude>
    </excludes>
</phpcompatinfo>
